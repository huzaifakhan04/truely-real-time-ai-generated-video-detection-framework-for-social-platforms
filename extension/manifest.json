{
  "manifest_version": 3,
  "name": "AI-Generated Video Detector",
  "version": "1.1",
  "description": "Detects AI-generated content in YouTube, Twitter, Facebook, and Reddit videos.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://www.facebook.com/*",
    "https://fb.watch/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*",
    "https://redd.it/*",
    "http://localhost:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "https://www.facebook.com/*",
        "https://fb.watch/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.reddit.com/*",
        "https://redd.it/*"
      ],
      "js": ["content.js"]
    }
  ]
}