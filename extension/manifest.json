{
  "manifest_version": 3,
  "name": "Truely",
  "version": "2.2.3",
  "description": "A real-time browser extension that detects AI-generated or manipulated videos on social platforms and cross-verifies audio content against trusted sources using agentic AI web search.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "auth.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://www.facebook.com/*",
    "https://fb.watch/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*",
    "https://redd.it/*",
    "http://localhost:5001/*",
    "https://lgfgocwqlfpnkcteiyen.supabase.co/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "https://www.facebook.com/*",
        "https://fb.watch/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.reddit.com/*",
        "https://redd.it/*"
      ],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://lgfgocwqlfpnkcteiyen.supabase.co https://*.supabase.co http://localhost:5001 https://identity.supabase.co"
  },
  "web_accessible_resources": [
    {
      "resources": ["supabase-js-bundle.js", "config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}